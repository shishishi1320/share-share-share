!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ShareShareShare
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
  %header.header
    .header__title
      = link_to "SHARE", root_path, class: "header__title--text"
    .header__center
      = link_to "健康", healths_path, class: "header__center--left"
      = link_to "仕事・勉強", works_path, class: "header__center--right"

    .header__right
      - if user_signed_in?
        = link_to current_user.nickname, user_path(current_user), class: "header__right--btn"
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn"
      - else
        = link_to "ログイン", new_user_session_path, class: "header__right--btn"
        = link_to "新規登録", new_user_registration_path, class: "header__right--btn"
  .contents
    = yield

